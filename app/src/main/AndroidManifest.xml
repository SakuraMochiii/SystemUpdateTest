<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cloudpos.activity"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- Permission to write data to sdcard -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Permission to create/delete files in sdcard -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- Upgrade firmware interface permissions -->
    <uses-permission android:name="android.permission.CLOUDPOS_SYS_UPDATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/display_128"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.cloudpos.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--        <activity-->
        <!--            android:name="com.cloudpos.activity.AlertDialogDemoActivity"-->
        <!--            android:launchMode="singleTask"-->
        <!--            android:theme="@style/load_dialog"-->
        <!--             >-->
        <!--        </activity>-->
    </application>

</manifest>